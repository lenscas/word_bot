{
    "compilerOptions": {
        "typeRoots": ["./typings"],
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6", "ES2019.Array"],
        "allowJs": false,
        "outDir": "build",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "sourceMap": true,
    },
    "ts-node": {
        "files": true
      },
    "include": ["src/**/*","typings/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
